---
import SimplePageLayout from '~/layouts/SimpleLandingLayout.astro';
import '../assets/styles/landingPage.css';
const metadata = {
  title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<SimplePageLayout metadata={metadata}>
  <div class="hero">
    <h1>Bienvenido a Nuestro Sitio</h1>
    <p>Descubre nuestros servicios y cómo podemos ayudarte a alcanzar tus metas.</p>
    <button onclick="alert('¡Gracias por tu interés!')">Contáctanos</button>
  </div>
</SimplePageLayout>
